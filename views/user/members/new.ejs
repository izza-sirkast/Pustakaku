<a href="/user/members" class="text-blue-500 hover:text-blue-700 mr-3">&larr; back to all member listing</a>

<h1 class="text-3xl">Add New Member</h1>

<% if (messages.error) { %>
    <p><%= messages.error %></p>
<% } %>

<form action="/user/members/add" method="post" class="mt-3">

    <div class="mb-2">
        <label for="name">Name</label><br>
        <input type="text" name="name" id="name" class="px-2 rounded-md border border-black" required>
    </div>

    <div class="mb-2">
        <label for="email">Email</label><br>
        <input type="email" name="email" id="email" class="px-2 rounded-md border border-black" required>
    </div>

    <div class="mb-5">
        <label for="password">Password</label><br>
        <input type="password" name="password" id="password" class="px-2 rounded-md border border-black" required>
    </div>

    <div class="mb-2 flex items-center">
        <a href="/user/members" class="px-2 rounded-md bg-gray-200 border border-black hover:bg-gray-400 transition-all ease-in mr-2">Cancel</a>

        <button type="submit" class="px-2 rounded-md bg-green-300 border border-black hover:bg-green-400 transition-all ease-in">Add</button>
    </div>
</form>