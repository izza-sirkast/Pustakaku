<h1>Create new book</h1>
<% if (locals.error) { %>
    <p><%= error %></p>
<% } %>
<form action="/user/books/new" method="POST">
    <div class="input-item">
        <label for="title">Title : </label>
        <input type="text" name="title" id="title" value="<%= book.title %>" required></input>
    </div>
    
    <div class="input-item">
        <label for="quantity">Book quantity : </label>
        <input type="number" name="quantity" id="quantity" required></input>
    </div>
    
    <div class="input-item">
        <label for="author">Author : </label>
        <select name="author" id="author" required>
            <% authors.forEach(author => { %>
                <% if (book.author === author._id) { %>
                    <option selected value="<%= author._id %>"><%= author.name %></option>
                <% } else { %>        
                    <option value="<%= author._id %>"><%= author.name %></option>
                <% } %>
            <% }) %>
        </select>
    </div>
    
    <div class="input-item">
        <label for="publishDate">Publish Date : </label>
        <input type="date" name="publishDate" id="publishDate" 
        value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>" required></input>
    </div>
        
    <div class="input-item">
        <label for="pageCount">Number of pages : </label>
        <input type="number" name="pageCount" id="pageCount" min="1" value="<%= book.pageCount %>" required></input>
    </div>
    
    <div class="input-item">
        <label for="coverImage">Cover Image : </label>
        <input type="file" name="coverImage" id="coverImage" class="filepond coverimg-input" required></input>
    </div>
    
    <div class="input-item">
        <label for="description" class="textarea-label">Description : </label>
        <textarea name="description" id="description"><%= book.description %></textarea>
    </div>
    
    <div class="input-item">
        <a href="/user/books/<%= book._id %>" class="btn">Cancel</a>
        <button type="submit" class="btn btn-success">Submit</button>
    </div>
</form>