<a href="/user/authors/<%= author._id %>" class="text-blue-500 hover:text-blue-700 mr-3">&larr; back to author</a>

<h1 class="text-3xl">Edit Author</h1>

<form action="/user/authors/<%= author.id %>?_method=PUT" method="POST">
    <div class="mt-3">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="<%= author.name %>" class="block px-2 rounded-md border border-black"></input>
    </div>

    <div class="mt-3 flex items-center">
        <a href="/user/authors/<%= author.id %>" class="px-2 bg-gray-200 border border-black rounded-md hover:bg-gray-300 transition-all ease-in mr-2">Cancel</a>

        <button type="submit" class="px-2 bg-green-300 border border-black rounded-md hover:bg-green-400 transition-all ease-in">Submit</button>
    </div>
</form>