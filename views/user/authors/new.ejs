<h2>Add New Author</h1>
<% if (locals.errorMsg) { %>
    <p><%= errorMsg %></p>
<% } %>
<form action="/user/authors/new" method="post">
    <div class="input-item">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="<%= author.name %>"></input>
    </div>

    <div class="input-item">
        <a href="/user/authors" class="btn">Cancel</a>
        <button type="submit" class="btn btn-success">Submit</button>
    </div>
</form>