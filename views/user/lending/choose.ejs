<h1>Choose book first</h1>
<div class="form">
    <h3 class="form-title">Filter</h4>
    <form action="/user/lending/new" method="get">
        <div class="input-item">
            <label for="title">Title : </label>
            <input type="text" name="title" id="title" value="<%= searchParams.title %>"></input>
        </div>
        
        <div class="input-item">
            <label for="publishedAfter">Published after : </label>
            <input type="date" name="publishedAfter" id="publishedAfter" value="<%= searchParams.publishedAfter %>"></input>
        </div>
        
        <div class="input-item">
            <label for="publishedBefore">Published before </label>
            <input type="date" name="publishedBefore" id="publishedBefore" value="<%= searchParams.publishedBefore %>"></input>
        </div>
        
        <div class="input-item">
            <a href="user/books" class="btn">Cancel</a>
            <button type="submit" class="btn btn-success">Search</button>
        </div>
    </form>
</div>