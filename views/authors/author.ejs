<a href="/authors" style="font-size: 14px; color: black;">Back to all authors</a>
<% if (error.length > 0) { %>
    <p style="color: red;"><%= error[0] %></p>
<% } %>
<div class="author-item">
    <h3 style="margin-right: 50px;"><%= author.name %></h3>
    <ul style="display: flex; width: 100px; justify-content: space-between;">
        <li><a href="/authors/<%= author._id %>/edit">Edit</a></li>
        <li>
            <form action="/authors/<%= author._id %>?_method=DELETE" method="post">
                <button type="submit" onclick="return confirm('Are you sure want to delete author ?')">Delete</button>
            </form>
        </li>
    </ul>
</div>
<h3><%= author.name %>'s books listing</h3>
<div class="books-listing">
    <% books.forEach(book => { %>
        <a href="/books/<%= book._id %>">
            <img src="<%= book.coverImageRender %>" width="100" height="150">
        </a>
    <% }) %>
</div>