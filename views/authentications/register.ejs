<div class="flex flex-col items-center mb-16 w-2/3 max-w-lg bg-blue-200 rounded-md py-6 ">
    <h1 class="text-5xl mb-6">Register</h1>
    <form action="/register" method="post" class="w-4/5">

        <div class="mb-4">
            <label for="username" class="block">Username : </label>
            <input type="text" name="username" id="username" class="w-full rounded-md h-7 px-2" required>
        </div>
        
        <div class="mb-4">
            <label for="email" class="block">Email : </label>
            <input type="email" name="email" id="email" class="w-full rounded-md h-7 px-2" required>
        </div>
        
        
        <div class="mb-9">
            <label for="password" class="block">Password :</label>
            <input type="password" name="password" id="password" class="w-full rounded-md h-7 px-2" required>
        </div>
        
        <button type="submit" class="block bg-sky-300 hover:bg-sky-700 ease-out duration-200 h-7 px-3 w-full rounded-md mb-1">Register</button>

        <a href="/auth/login" class="text-sm text-blue-500 underline">Login</a>
    </form>
</div>