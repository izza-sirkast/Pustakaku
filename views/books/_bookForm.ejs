<label for="title">Title</label>
<input type="text" name="title" id="title" value="<%= book.title %>"></input>

<br>
<label for="author">Author</label>
<select name="author" id="author">
    <% authors.forEach(author => { %>
        <% if (book.author === author._id) { %>
            <option selected value="<%= author._id %>"><%= author.name %></option>
        <% } else { %>        
            <option value="<%= author._id %>"><%= author.name %></option>
        <% } %>
    <% }) %>
</select>

<br>
<label for="publishDate">Publish Date</label>
<input type="date" name="publishDate" id="publishDate" 
    value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>"></input>

<br>
<label for="pageCount">Number of pages</label>
<input type="number" name="pageCount" id="pageCount" min="1"></input>

<br>
<label for="coverImage">Cover Image</label>
<input type="file" name="coverImage" id="coverImage" class="filepond"></input>

<br>
<label for="description">Description</label>
<textarea name="description" id="description"><%= book.description %></textarea>

<br>
<a href="/books">Cancel</a>
<button type="submit">Submit</button>